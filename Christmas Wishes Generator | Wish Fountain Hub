          "{name}, che Babbo Natale ti porti felicit√†, salute e tutti i regali che hai sognato. Buon Natale! ü¶å"
        ]
      }
    };

    // ========== CHRISTMAS THEME NAMES ==========
    const themeNames = {
      'santa': {
        en: 'Santa Claus Theme',
        es: 'Tema Pap√° Noel',
        fr: 'Th√®me P√®re No√´l',
        de: 'Weihnachtsmann Thema',
        it: 'Tema Babbo Natale'
      },
      'tree': {
        en: 'Christmas Tree Theme',
        es: 'Tema √Årbol de Navidad',
        fr: 'Th√®me Sapin de No√´l',
        de: 'Weihnachtsbaum Thema',
        it: 'Tema Albero di Natale'
      },
      'snow': {
        en: 'Winter Snow Theme',
        es: 'Tema Nieve Invernal',
        fr: 'Th√®me Neige Hivernale',
        de: 'Winter Schnee Thema',
        it: 'Tema Neve Invernale'
      },
      'star': {
        en: 'Star of Bethlehem Theme',
        es: 'Tema Estrella de Bel√©n',
        fr: 'Th√®me √âtoile de Bethl√©em',
        de: 'Stern von Bethlehem Thema',
        it: 'Tema Stella di Betlemme'
      },
      'reindeer': {
        en: "Santa's Reindeer Theme",
        es: 'Tema Renos de Pap√° Noel',
        fr: 'Th√®me Rennes du P√®re No√´l',
        de: 'Weihnachtsmann Rentiere Thema',
        it: 'Tema Renne di Babbo Natale'
      }
    };

    // ========== CHRISTMAS TITLES ==========
    const christmasTitles = {
      en: 'Merry Christmas',
      es: 'Feliz Navidad',
      fr: 'Joyeux No√´l',
      de: 'Frohe Weihnachten',
      it: 'Buon Natale'
    };

    // ========== GLOBAL VARIABLES ==========
    let selectedWishIndex = 0;
    let currentLang = "en";
    let currentRecipient = "";
    let currentSender = "";
    let insideSlideIndex = 0;
    let insideTimer = null;
    let currentDesign = 1;
    let currentTheme = 'santa';

    // ========== URL PARAMS ==========
    function getUrlParams() {
      const params = new URLSearchParams(window.location.search);
      return {
        view: params.get('view'),
        wish: params.get('wish'),
        to: params.get('to'),
        from: params.get('from'),
        lang: params.get('lang') || 'en',
        design: params.get('design') || '1',
        theme: params.get('theme') || 'santa'
      };
    }

    function baseToolUrl() {
      return window.location.origin + window.location.pathname;
    }

    function generateShareUrl(recipientName, senderName, lang, wishIndex, design, theme) {
      const baseUrl = baseToolUrl();
      return `${baseUrl}?view=card&wish=${wishIndex}&to=${encodeURIComponent(recipientName)}&from=${encodeURIComponent(senderName)}&lang=${encodeURIComponent(lang)}&design=${design}&theme=${theme}`;
    }

    // ========== INITIALIZATION ==========
    window.addEventListener('DOMContentLoaded', () => {
      const params = getUrlParams();

      if (params.view === "card" && params.wish !== null && params.to) {
        // Shared card view
        currentDesign = parseInt(params.design) || 1;
        currentTheme = params.theme || 'santa';
        displaySharedCard(params);
        showSection('cardView');
        document.title = `Christmas Card for ${decodeURIComponent(params.to)} | Wish Fountain Hub`;
      } else {
        // Generator view
        showSection('generator');
        loadWishes();
        createSnowflakes(50);
        startFloatingSnow();
        document.title = "Christmas Wishes Generator | Wish Fountain Hub";
      }
    });

    // ========== SECTIONS ==========
    function showSection(sectionName) {
      document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
      document.getElementById(sectionName + 'Section').classList.add('active');
      if (sectionName === 'generator') document.title = "Christmas Wishes Generator | Wish Fountain Hub";
    }

    function goToGenerator() {
      window.history.pushState({}, document.title, window.location.pathname);
      stopInsideSlideshow();
      closeCardIfOpen();
      showSection('generator');
      loadWishes();
    }

    function closeCardIfOpen() {
      document.getElementById('cardContainer').classList.remove('card-open');
    }

    // ========== THEME SELECTION ==========
    function selectTheme(theme) {
      currentTheme = theme;
      document.querySelectorAll('.theme-option').forEach(option => {
        option.classList.remove('selected');
      });
      event.currentTarget.classList.add('selected');
      loadWishes();
    }

    // ========== DESIGN SELECTION ==========
    function selectDesign(designNumber) {
      currentDesign = designNumber;
      document.querySelectorAll('.design-option').forEach(option => {
        option.classList.remove('selected');
      });
      document.querySelector(`.design-${designNumber}`).classList.add('selected');
    }

    // ========== WISHES ==========
    function loadWishes() {
      const wishList = document.getElementById('wishList');
      const lang = document.getElementById('langSelect').value;
      currentLang = lang;

      wishList.innerHTML = '';
      
      // Get wishes for current theme and language
      let themeWishes = [];
      if (wishes[lang] && wishes[lang][currentTheme]) {
        themeWishes = wishes[lang][currentTheme];
      } else if (wishes['en'] && wishes['en'][currentTheme]) {
        themeWishes = wishes['en'][currentTheme];
      } else {
        themeWishes = ["Merry Christmas {name}! May your holidays be filled with joy and love. üéÑ"];
      }

      themeWishes.forEach((wish, index) => {
        const wishItem = document.createElement('div');
        wishItem.className = 'wish-item' + (index === selectedWishIndex ? ' selected' : '');
        const sampleWish = wish.replace('{name}', 'Friend');
        wishItem.innerHTML = `<strong>Wish ${index + 1}:</strong> ${sampleWish}`;
        wishItem.onclick = () => selectWish(index);
        wishList.appendChild(wishItem);
      });
    }

    function selectWish(index) {
      selectedWishIndex = index;
      document.querySelectorAll('.wish-item').forEach((item, i) => {
        item.classList.toggle('selected', i === index);
      });
    }

    document.getElementById('langSelect').addEventListener('change', () => {
      selectedWishIndex = 0;
      loadWishes();
    });

    // ========== GENERATE CARD ==========
    function generateAndShowCard() {
      const recipientName = document.getElementById('recipientName').value.trim();
      const senderName = document.getElementById('senderName').value.trim();
      const lang = document.getElementById('langSelect').value;

      if (!recipientName) return alert("Please enter the recipient's name!");
      if (!senderName) return alert("Please enter your name as sender!");

      currentRecipient = recipientName;
      currentSender = senderName;
      currentLang = lang;

      displayCard(recipientName, senderName, lang, selectedWishIndex);
      showSection('cardView');
    }

    function displayCard(recipientName, senderName, lang, wishIndex) {
      const christmasTitle = christmasTitles[lang] || christmasTitles['en'];
      const themeName = themeNames[currentTheme][lang] || themeNames[currentTheme]['en'];
      
      // Get wish text
      let wishText = "";
      if (wishes[lang] && wishes[lang][currentTheme] && wishes[lang][currentTheme][wishIndex]) {
        wishText = wishes[lang][currentTheme][wishIndex];
      } else if (wishes['en'] && wishes['en'][currentTheme] && wishes['en'][currentTheme][wishIndex]) {
        wishText = wishes['en'][currentTheme][wishIndex];
      } else {
        wishText = `Merry Christmas ${recipientName}! May your holidays be filled with joy, love, and festive cheer! üéÑ`;
      }
      
      wishText = wishText.replace('{name}', recipientName);

      // Update card front design
      const cardFront = document.getElementById('cardFront');
      cardFront.className = 'card-front';
      cardFront.classList.add(`design-${currentDesign}-front`);

      document.getElementById('cardTitle').textContent = christmasTitle;
      document.getElementById('themeBadge').textContent = themeName;
      document.getElementById('cardMessage').textContent = wishText;
      document.getElementById('cardSender').textContent = `From: ${senderName}`;

      document.getElementById('insideTitle').textContent = christmasTitle;
      document.getElementById('insideThemeBadge').textContent = themeName;
      document.getElementById('cardInsideMessage').textContent = wishText;
      document.getElementById('cardInsideSender').textContent = senderName;

      prepareSlidesOnce();
      showInsideSlide(0);
      stopInsideSlideshow();
      closeCardIfOpen();
    }

    function displaySharedCard(params) {
      const recipientName = decodeURIComponent(params.to || 'Friend');
      const senderName = decodeURIComponent(params.from || "Santa's Helper");
      const lang = (params.lang || 'en');
      const wishIndex = Math.max(0, parseInt(params.wish || "0", 10));
      const design = parseInt(params.design) || 1;
      const theme = params.theme || 'santa';

      currentRecipient = recipientName;
      currentSender = senderName;
      currentLang = lang;
      selectedWishIndex = wishIndex;
      currentDesign = design;
      currentTheme = theme;

      displayCard(recipientName, senderName, lang, wishIndex);
    }

    // ========== FLIP + SLIDESHOW ==========
    function flipCard() {
      const container = document.getElementById('cardContainer');
      container.classList.toggle('card-open');

      const isOpen = container.classList.contains('card-open');
      if (isOpen) startInsideSlideshow();
      else stopInsideSlideshow();
    }

    function getSlides() {
      return Array.from(document.querySelectorAll('#insideSlideshow .inside-slide'));
    }

    function showInsideSlide(index) {
      const slides = getSlides();
      if (!slides.length) return;

      insideSlideIndex = (index + slides.length) % slides.length;
      slides.forEach((s, i) => s.classList.toggle('active', i === insideSlideIndex));
    }

    function startInsideSlideshow() {
      stopInsideSlideshow();
      showInsideSlide(0);
      insideTimer = setInterval(() => showInsideSlide(insideSlideIndex + 1), 3500);
    }

    function stopInsideSlideshow() {
      if (insideTimer) clearInterval(insideTimer);
      insideTimer = null;
    }

    // Build slide elements
    let slidesPrepared = false;
    function prepareSlidesOnce() {
      if (slidesPrepared) return;
      slidesPrepared = true;

      const slides = getSlides();
      if (slides.length < 5) return;

      // Slide 1: Santa Theme
      const santaContainer = document.createElement('div');
      santaContainer.className = 'santa-container';
      slides[0].appendChild(santaContainer);

      // Create flying Santa
      const santa = document.createElement('div');
      santa.className = 'santa';
      santa.innerHTML = 'üéÖ';
      santa.style.left = '-100px';
      santa.style.top = '50px';
      santa.style.animationDelay = '0s';
      santaContainer.appendChild(santa);

      // Add gift boxes
      for (let i = 0; i < 6; i++) {
        const gift = document.createElement('div');
        gift.style.position = 'absolute';
        gift.style.fontSize = '30px';
        gift.style.color = i % 2 === 0 ? '#FFD700' : '#DC143C';
        gift.style.left = `${15 + (i * 15)}%`;
        gift.style.bottom = '20%';
        gift.style.animation = `bounce ${2 + Math.random()}s infinite`;
        gift.style.animationDelay = `${i * 0.5}s`;
        gift.innerHTML = 'üéÅ';
        slides[0].appendChild(gift);
      }

      // Slide 2: Christmas Tree
      const christmasTree = document.createElement('div');
      christmasTree.className = 'christmas-tree';
      christmasTree.innerHTML = 'üéÑ';
      slides[1].appendChild(christmasTree);

      // Add ornaments to tree
      for (let i = 0; i < 8; i++) {
        const ornament = document.createElement('div');
        ornament.style.position = 'absolute';
        ornament.style.fontSize = '25px';
        ornament.style.color = i % 3 === 0 ? '#DC143C' : (i % 3 === 1 ? '#FFD700' : '#1E90FF');
        ornament.style.left = `${45 + (i % 3) * 5}%`;
        ornament.style.top = `${40 + Math.floor(i / 3) * 15}%`;
        ornament.style.animation = `treeGlow ${3 + Math.random() * 2}s infinite`;
        ornament.style.animationDelay = `${i * 0.3}s`;
        ornament.innerHTML = 'üî¥';
        slides[1].appendChild(ornament);
      }

      // Slide 3: Snow Theme
      const snowflakeLarge = document.createElement('div');
      snowflakeLarge.className = 'snowflake-large';
      snowflakeLarge.innerHTML = '‚ùÑÔ∏è';
      slides[2].appendChild(snowflakeLarge);

      // Add falling snowflakes
      for (let i = 0; i < 15; i++) {
        const snowflake = document.createElement('div');
        snowflake.style.position = 'absolute';
        snowflake.style.fontSize = '30px';
        snowflake.style.color = '#fff';
        snowflake.style.left = `${Math.random() * 100}%`;
        snowflake.style.top = `${Math.random() * 100}%`;
        snowflake.style.animation = `snowFall ${2 + Math.random() * 3}s infinite`;
        snowflake.style.animationDelay = `${Math.random() * 2}s`;
        snowflake.innerHTML = '‚ùÑÔ∏è';
        slides[2].appendChild(snowflake);
      }

      // Slide 4: Star Theme
      const starIcon = document.createElement('div');
      starIcon.className = 'star-icon';
      starIcon.innerHTML = '‚≠ê';
      slides[3].appendChild(starIcon);

      // Add twinkling stars
      for (let i = 0; i < 12; i++) {
        const star = document.createElement('div');
        star.style.position = 'absolute';
        star.style.fontSize = '35px';
        star.style.color = '#FFD700';
        star.style.left = `${5 + (i * 8)}%`;
        star.style.top = `${15 + (i % 4) * 20}%`;
        star.style.animation = `starTwinkle ${1 + Math.random() * 2}s infinite`;
        star.style.animationDelay = `${i * 0.2}s`;
        star.innerHTML = '‚ú®';
        slides[3].appendChild(star);
      }

      // Slide 5: Reindeer Theme
      const reindeerIcon = document.createElement('div');
      reindeerIcon.className = 'reindeer-icon';
      reindeerIcon.innerHTML = 'ü¶å';
      slides[4].appendChild(reindeerIcon);

      // Add running reindeer
      for (let i = 0; i < 6; i++) {
        const reindeer = document.createElement('div');
        reindeer.style.position = 'absolute';
        reindeer.style.fontSize = '40px';
        reindeer.style.color = '#8B4513';
        reindeer.style.left = `${10 + i * 15}%`;
        reindeer.style.bottom = '30%';
        reindeer.style.animation = `reindeerRun ${3 + Math.random() * 2}s infinite`;
        reindeer.style.animationDelay = `${i * 0.3}s`;
        reindeer.innerHTML = 'ü¶å';
        slides[4].appendChild(reindeer);
      }
    }

    // ========== SNOWFLAKE ANIMATIONS ==========
    function createSnowflakes(count = 50) {
      const container = document.getElementById('snowflakes');
      container.innerHTML = '';

      for (let i = 0; i < count; i++) {
        const snowflake = document.createElement('div');
        snowflake.className = 'snowflake';
        snowflake.innerHTML = '‚ùÑ';
        
        const left = Math.random() * 100;
        const animationDuration = 10 + Math.random() * 20;
        const animationDelay = Math.random() * 5;
        const fontSize = 10 + Math.random() * 20;
        const opacity = 0.5 + Math.random() * 0.5;

        snowflake.style.left = `${left}%`;
        snowflake.style.animationDuration = `${animationDuration}s`;
        snowflake.style.animationDelay = `${animationDelay}s`;
        snowflake.style.fontSize = `${fontSize}px`;
        snowflake.style.opacity = opacity;

        container.appendChild(snowflake);
      }
    }

    // ========== FLOATING SNOW BACKGROUND ==========
    function startFloatingSnow() {
      createFloatingSnow(30);
    }

    function createFloatingSnow(count = 30) {
      const container = document.getElementById('floatingSnowBg');
      container.innerHTML = '';

      for (let i = 0; i < count; i++) {
        const snow = document.createElement('div');
        snow.className = 'snow-bg';
        snow.innerHTML = '‚ùÑ';
        
        const left = Math.random() * 100;
        const duration = 20 + Math.random() * 30;
        const delay = Math.random() * 25;
        const size = 15 + Math.random() * 25;

        snow.style.left = `${left}%`;
        snow.style.animationDuration = `${duration}s`;
        snow.style.animationDelay = `${delay}s`;
        snow.style.fontSize = `${size}px`;
        snow.style.opacity = 0.3 + Math.random() * 0.4;

        container.appendChild(snow);
      }
    }

    // ========== SHARE FUNCTIONS ==========
    function shareOnWhatsApp() {
      if (!currentRecipient || !currentSender) return;

      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentTheme);
      const christmasTitle = christmasTitles[currentLang] || christmasTitles['en'];
      
      // Get wish text
      let wishText = "";
      if (wishes[currentLang] && wishes[currentLang][currentTheme] && wishes[currentLang][currentTheme][selectedWishIndex]) {
        wishText = wishes[currentLang][currentTheme][selectedWishIndex];
      } else if (wishes['en'] && wishes['en'][currentTheme] && wishes['en'][currentTheme][selectedWishIndex]) {
        wishText = wishes['en'][currentTheme][selectedWishIndex];
      } else {
        wishText = `Merry Christmas ${currentRecipient}! May your holidays be filled with joy and love! üéÑ`;
      }
      
      wishText = wishText.replace('{name}', currentRecipient);

      const message =
`${christmasTitle} for ${currentRecipient}!

${wishText}

From: ${currentSender}

Open this magical Christmas card (flip for amazing holiday themes):
${shareUrl}

Create your own at: https://wishfountain.site/christmas-wishes-generator.html`;

      window.open(`https://wa.me/?text=${encodeURIComponent(message)}`, '_blank');
    }

    function shareOnFacebook() {
      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentTheme);
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`, '_blank');
    }

    function shareOnTwitter() {
      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentTheme);
      const christmasTitle = christmasTitles[currentLang] || christmasTitles['en'];
      const text = `Check out this beautiful ${christmasTitle} card for ${currentRecipient}! ${shareUrl}`;
      window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`, '_blank');
    }

    function shareOnInstagram() {
      alert("To share on Instagram:\n1. Take a screenshot of the Christmas card\n2. Open Instagram and create a new post\n3. Share the Christmas joy with your followers!");
    }

    function shareOnPinterest() {
      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentTheme);
      const christmasTitle = christmasTitles[currentLang] || christmasTitles['en'];
      const media = "https://images.unsplash.com/photo-1545424922-3c5dac91c4bb?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80";
      const description = `Beautiful ${christmasTitle} card for ${currentRecipient}`;
      window.open(`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(shareUrl)}&media=${encodeURIComponent(media)}&description=${encodeURIComponent(description)}`, '_blank');
    }

    function copyCardLink() {
      if (!currentRecipient || !currentSender) return;

      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentTheme);
      navigator.clipboard.writeText(shareUrl)
        .then(() => alert("Christmas card link copied to clipboard! üìã\n\nShare this link with friends and family."))
        .catch(() => alert("Copy failed. Please copy the link manually:\n" + shareUrl));
    }

    // Add some interactive snow on click
    document.addEventListener('click', (e) => {
      if (Math.random() > 0.5) { // 50% chance on click
        const snow = document.createElement('div');
        snow.style.position = 'fixed';
        snow.style.left = `${e.clientX}px`;
        snow.style.top = `${e.clientY}px`;
        snow.style.fontSize = '30px';
        snow.style.color = '#fff';
        snow.style.opacity = '0.9';
        snow.style.pointerEvents = 'none';
        snow.style.zIndex = '1000';
        snow.style.transition = 'all 1.5s';
        snow.style.transform = 'scale(0)';
        snow.innerHTML = '‚ùÑ';
        document.body.appendChild(snow);

        setTimeout(() => {
          snow.style.transform = 'scale(1) translateY(100px) rotate(360deg)';
          snow.style.opacity = '0';
        }, 10);

        setTimeout(() => {
          if (snow.parentNode) snow.parentNode.removeChild(snow);
        }, 1600);
      }
    });

    // Bounce animation for gifts
    const style = document.createElement('style');
    style.textContent = `
      @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>
