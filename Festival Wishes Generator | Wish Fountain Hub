    // ========== GLOBAL VARIABLES ==========
    let selectedWishIndex = 0;
    let currentLang = "en";
    let currentRecipient = "";
    let currentSender = "";
    let insideSlideIndex = 0;
    let insideTimer = null;
    let currentDesign = 1;
    let currentFestival = 'diwali';
    let currentCategory = 'all';

    // ========== URL PARAMS ==========
    function getUrlParams() {
      const params = new URLSearchParams(window.location.search);
      return {
        view: params.get('view'),
        wish: params.get('wish'),
        to: params.get('to'),
        from: params.get('from'),
        lang: params.get('lang') || 'en',
        design: params.get('design') || '1',
        festival: params.get('festival') || 'diwali'
      };
    }

    function baseToolUrl() {
      return window.location.origin + window.location.pathname;
    }

    function generateShareUrl(recipientName, senderName, lang, wishIndex, design, festival) {
      const baseUrl = baseToolUrl();
      return `${baseUrl}?view=card&wish=${wishIndex}&to=${encodeURIComponent(recipientName)}&from=${encodeURIComponent(senderName)}&lang=${encodeURIComponent(lang)}&design=${design}&festival=${festival}`;
    }

    // ========== INITIALIZATION ==========
    window.addEventListener('DOMContentLoaded', () => {
      const params = getUrlParams();

      if (params.view === "card" && params.wish !== null && params.to) {
        // Shared card view
        currentDesign = parseInt(params.design) || 1;
        currentFestival = params.festival || 'diwali';
        displaySharedCard(params);
        showSection('cardView');
        document.title = `Festival Card for ${decodeURIComponent(params.to)} | Wish Fountain Hub`;
      } else {
        // Generator view
        showSection('generator');
        loadWishes();
        startFloatingConfetti();
        document.title = "Festival Wishes Generator | Wish Fountain Hub";
      }
    });

    // ========== SECTIONS ==========
    function showSection(sectionName) {
      document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
      document.getElementById(sectionName + 'Section').classList.add('active');
      if (sectionName === 'generator') document.title = "Festival Wishes Generator | Wish Fountain Hub";
    }

    function goToGenerator() {
      window.history.pushState({}, document.title, window.location.pathname);
      stopInsideSlideshow();
      closeCardIfOpen();
      showSection('generator');
      loadWishes();
    }

    function closeCardIfOpen() {
      document.getElementById('cardContainer').classList.remove('card-open');
    }

    // ========== CATEGORY SELECTION ==========
    function selectCategory(category) {
      currentCategory = category;
      document.querySelectorAll('.festival-category').forEach(cat => {
        cat.classList.remove('selected');
      });
      event.currentTarget.classList.add('selected');
      
      // Filter festival options based on category
      // In a real app, this would filter the visible options
      // For now, we'll just update the selection UI
    }

    // ========== FESTIVAL SELECTION ==========
    function selectFestival(festival) {
      currentFestival = festival;
      document.querySelectorAll('.festival-option').forEach(option => {
        option.classList.remove('selected');
      });
      event.currentTarget.classList.add('selected');
      loadWishes();
    }

    // ========== DESIGN SELECTION ==========
    function selectDesign(designNumber) {
      currentDesign = designNumber;
      document.querySelectorAll('.design-option').forEach(option => {
        option.classList.remove('selected');
      });
      document.querySelector(`.design-${designNumber}`).classList.add('selected');
    }

    // ========== WISHES ==========
    function loadWishes() {
      const wishList = document.getElementById('wishList');
      const lang = document.getElementById('langSelect').value;
      currentLang = lang;

      wishList.innerHTML = '';
      
      // Get wishes for current festival and language
      let festivalWishes = [];
      if (wishes[lang] && wishes[lang][currentFestival]) {
        festivalWishes = wishes[lang][currentFestival];
      } else if (wishes['en'] && wishes['en'][currentFestival]) {
        festivalWishes = wishes['en'][currentFestival];
      } else {
        festivalWishes = ["Happy Festival {name}! May this celebration bring you joy and happiness. ðŸŽ‰"];
      }

      festivalWishes.forEach((wish, index) => {
        const wishItem = document.createElement('div');
        wishItem.className = 'wish-item' + (index === selectedWishIndex ? ' selected' : '');
        const sampleWish = wish.replace('{name}', 'Friend');
        wishItem.innerHTML = `<strong>Wish ${index + 1}:</strong> ${sampleWish}`;
        wishItem.onclick = () => selectWish(index);
        wishList.appendChild(wishItem);
      });
    }

    function selectWish(index) {
      selectedWishIndex = index;
      document.querySelectorAll('.wish-item').forEach((item, i) => {
        item.classList.toggle('selected', i === index);
      });
    }

    document.getElementById('langSelect').addEventListener('change', () => {
      selectedWishIndex = 0;
      loadWishes();
    });

    // ========== GENERATE CARD ==========
    function generateAndShowCard() {
      const recipientName = document.getElementById('recipientName').value.trim();
      const senderName = document.getElementById('senderName').value.trim();
      const lang = document.getElementById('langSelect').value;

      if (!recipientName) return alert("Please enter the recipient's name!");
      if (!senderName) return alert("Please enter your name as sender!");

      currentRecipient = recipientName;
      currentSender = senderName;
      currentLang = lang;

      displayCard(recipientName, senderName, lang, selectedWishIndex);
      showSection('cardView');
    }

    function displayCard(recipientName, senderName, lang, wishIndex) {
      const festivalName = festivalNames[currentFestival][lang] || festivalNames[currentFestival]['en'];
      const festivalDesc = festivalDescriptions[currentFestival][lang] || festivalDescriptions[currentFestival]['en'];
      
      // Get wish text
      let wishText = "";
      if (wishes[lang] && wishes[lang][currentFestival] && wishes[lang][currentFestival][wishIndex]) {
        wishText = wishes[lang][currentFestival][wishIndex];
      } else if (wishes['en'] && wishes['en'][currentFestival] && wishes['en'][currentFestival][wishIndex]) {
        wishText = wishes['en'][currentFestival][wishIndex];
      } else {
        wishText = `Happy ${currentFestival} ${recipientName}! May this festival bring you joy, happiness, and prosperity. ðŸŽ‰`;
      }
      
      wishText = wishText.replace('{name}', recipientName);

      // Update card front design
      const cardFront = document.getElementById('cardFront');
      cardFront.className = 'card-front';
      cardFront.classList.add(`design-${currentDesign}-front`);

      document.getElementById('cardTitle').textContent = festivalName;
      document.getElementById('festivalBadge').textContent = festivalDesc;
      document.getElementById('cardMessage').textContent = wishText;
      document.getElementById('cardSender').textContent = `From: ${senderName}`;

      document.getElementById('insideTitle').textContent = festivalName;
      document.getElementById('insideFestivalBadge').textContent = festivalDesc;
      document.getElementById('cardInsideMessage').textContent = wishText;
      document.getElementById('cardInsideSender').textContent = senderName;

      prepareSlidesOnce();
      showInsideSlide(0);
      stopInsideSlideshow();
      closeCardIfOpen();
    }

    function displaySharedCard(params) {
      const recipientName = decodeURIComponent(params.to || 'Friend');
      const senderName = decodeURIComponent(params.from || 'Your Friend');
      const lang = (params.lang || 'en');
      const wishIndex = Math.max(0, parseInt(params.wish || "0", 10));
      const design = parseInt(params.design) || 1;
      const festival = params.festival || 'diwali';

      currentRecipient = recipientName;
      currentSender = senderName;
      currentLang = lang;
      selectedWishIndex = wishIndex;
      currentDesign = design;
      currentFestival = festival;

      displayCard(recipientName, senderName, lang, wishIndex);
    }

    // ========== FLIP + SLIDESHOW ==========
    function flipCard() {
      const container = document.getElementById('cardContainer');
      container.classList.toggle('card-open');

      const isOpen = container.classList.contains('card-open');
      if (isOpen) startInsideSlideshow();
      else stopInsideSlideshow();
    }

    function getSlides() {
      return Array.from(document.querySelectorAll('#insideSlideshow .inside-slide'));
    }

    function showInsideSlide(index) {
      const slides = getSlides();
      if (!slides.length) return;

      insideSlideIndex = (index + slides.length) % slides.length;
      slides.forEach((s, i) => s.classList.toggle('active', i === insideSlideIndex));
    }

    function startInsideSlideshow() {
      stopInsideSlideshow();
      showInsideSlide(0);
      insideTimer = setInterval(() => showInsideSlide(insideSlideIndex + 1), 3500);
    }

    function stopInsideSlideshow() {
      if (insideTimer) clearInterval(insideTimer);
      insideTimer = null;
    }

    // Build slide elements
    let slidesPrepared = false;
    function prepareSlidesOnce() {
      if (slidesPrepared) return;
      slidesPrepared = true;

      const slides = getSlides();
      if (slides.length < 5) return;

      // Slide 1: Fireworks
      const fireworksContainer = document.createElement('div');
      fireworksContainer.className = 'fireworks-container';
      slides[0].appendChild(fireworksContainer);

      // Create fireworks
      for (let i = 0; i < 15; i++) {
        const firework = document.createElement('div');
        firework.className = 'firework';
        firework.innerHTML = 'ðŸŽ†';
        firework.style.left = `${Math.random() * 100}%`;
        firework.style.top = `${Math.random() * 100}%`;
        firework.style.fontSize = `${Math.random() * 40 + 30}px`;
        firework.style.animationDelay = `${Math.random() * 2}s`;
        firework.style.animationDuration = `${1 + Math.random() * 2}s`;
        fireworksContainer.appendChild(firework);
      }

      // Slide 2: Celebration
      const celebrationIcon = document.createElement('div');
      celebrationIcon.className = 'celebration-icon';
      celebrationIcon.innerHTML = 'ðŸŽ‰âœ¨';
      slides[1].appendChild(celebrationIcon);

      // Add floating balloons
      for (let i = 0; i < 8; i++) {
        const balloon = document.createElement('div');
        balloon.style.position = 'absolute';
        balloon.style.fontSize = '40px';
        balloon.style.color = i % 2 === 0 ? '#FF6B6B' : '#4ECDC4';
        balloon.style.left = `${10 + (i * 12)}%`;
        balloon.style.top = `${20 + (i * 8)}%`;
        balloon.style.animation = `bounce ${3 + Math.random() * 2}s infinite`;
        balloon.style.animationDelay = `${i * 0.3}s`;
        balloon.innerHTML = 'ðŸŽˆ';
        slides[1].appendChild(balloon);
      }

      // Slide 3: Sparkles
      const sparklesContainer = document.createElement('div');
      sparklesContainer.style.position = 'absolute';
      sparklesContainer.style.width = '100%';
      sparklesContainer.style.height = '100%';
      slides[2].appendChild(sparklesContainer);

      for (let i = 0; i < 20; i++) {
        const sparkle = document.createElement('div');
        sparkle.className = 'sparkle';
        sparkle.innerHTML = 'âœ¨';
        sparkle.style.left = `${Math.random() * 100}%`;
        sparkle.style.top = `${Math.random() * 100}%`;
        sparkle.style.fontSize = `${Math.random() * 40 + 20}px`;
        sparkle.style.animationDelay = `${Math.random() * 2}s`;
        sparklesContainer.appendChild(sparkle);
      }

      // Slide 4: Party
      const partyIcon = document.createElement('div');
      partyIcon.className = 'party-icon';
      partyIcon.innerHTML = 'ðŸ¥³ðŸŽŠ';
      slides[3].appendChild(partyIcon);

      // Add party horns
      for (let i = 0; i < 6; i++) {
        const horn = document.createElement('div');
        horn.style.position = 'absolute';
        horn.style.fontSize = '50px';
        horn.style.color = '#FFD700';
        horn.style.top = `${30 + (i * 10)}%`;
        horn.style.left = `${15 + (i * 15)}%`;
        horn.style.transform = `rotate(${i * 30}deg)`;
        horn.style.animation = `partySpin ${4 + Math.random() * 2}s infinite`;
        horn.style.animationDelay = `${i * 0.5}s`;
        horn.innerHTML = 'ðŸŽ‰';
        slides[3].appendChild(horn);
      }

      // Slide 5: Festive
      const festiveIcon = document.createElement('div');
      festiveIcon.className = 'festive-icon';
      festiveIcon.innerHTML = 'ðŸŽ‡ðŸŽ†';
      slides[4].appendChild(festiveIcon);

      // Add festive lights
      for (let i = 0; i < 12; i++) {
        const light = document.createElement('div');
        light.style.position = 'absolute';
        light.style.fontSize = '30px';
        light.style.color = i % 3 === 0 ? '#FF6B6B' : (i % 3 === 1 ? '#4ECDC4' : '#FFD700');
        light.style.top = '15%';
        light.style.left = `${5 + (i * 8)}%`;
        light.style.animation = `festivePulse ${1 + Math.random()}s infinite`;
        light.style.animationDelay = `${i * 0.2}s`;
        light.innerHTML = 'ðŸ’¡';
        slides[4].appendChild(light);
      }
    }

    // ========== SHARE FUNCTIONS ==========
    function shareOnWhatsApp() {
      if (!currentRecipient || !currentSender) return;

      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentFestival);
      const festivalName = festivalNames[currentFestival][currentLang] || festivalNames[currentFestival]['en'];
      
      // Get wish text
      let wishText = "";
      if (wishes[currentLang] && wishes[currentLang][currentFestival] && wishes[currentLang][currentFestival][selectedWishIndex]) {
        wishText = wishes[currentLang][currentFestival][selectedWishIndex];
      } else if (wishes['en'] && wishes['en'][currentFestival] && wishes['en'][currentFestival][selectedWishIndex]) {
        wishText = wishes['en'][currentFestival][selectedWishIndex];
      } else {
        wishText = `Happy ${currentFestival} ${currentRecipient}! May this festival bring you joy and happiness. ðŸŽ‰`;
      }
      
      wishText = wishText.replace('{name}', currentRecipient);

      const message =
`${festivalName} for ${currentRecipient}!

${wishText}

From: ${currentSender}

Open this beautiful festival card (flip for amazing celebration themes):
${shareUrl}

Create your own at: https://wishfountain.site/festival-wishes-generator.html`;

      window.open(`https://wa.me/?text=${encodeURIComponent(message)}`, '_blank');
    }

    function shareOnFacebook() {
      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentFestival);
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`, '_blank');
    }

    function shareOnTwitter() {
      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentFestival);
      const festivalName = festivalNames[currentFestival][currentLang] || festivalNames[currentFestival]['en'];
      const text = `Check out this beautiful ${festivalName} card for ${currentRecipient}! ${shareUrl}`;
      window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`, '_blank');
    }

    function shareOnInstagram() {
      alert("To share on Instagram:\n1. Take a screenshot of the festival card\n2. Open Instagram and create a new post\n3. Share the festival joy with your followers!");
    }

    function shareOnPinterest() {
      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentFestival);
      const festivalName = festivalNames[currentFestival][currentLang] || festivalNames[currentFestival]['en'];
      const media = "https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80";
      const description = `Beautiful ${festivalName} card for ${currentRecipient}`;
      window.open(`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(shareUrl)}&media=${encodeURIComponent(media)}&description=${encodeURIComponent(description)}`, '_blank');
    }

    function copyCardLink() {
      if (!currentRecipient || !currentSender) return;

      const shareUrl = generateShareUrl(currentRecipient, currentSender, currentLang, selectedWishIndex, currentDesign, currentFestival);
      navigator.clipboard.writeText(shareUrl)
        .then(() => alert("Festival card link copied to clipboard! ðŸ“‹\n\nShare this link with friends and family."))
        .catch(() => alert("Copy failed. Please copy the link manually:\n" + shareUrl));
    }

    // ========== FLOATING CONFETTI BACKGROUND ==========
    function startFloatingConfetti() {
      createFloatingConfetti(50);
    }

    function createFloatingConfetti(count = 50) {
      const container = document.getElementById('floatingConfettiBg');
      container.innerHTML = '';

      const confettiTypes = ['ðŸŽ‰', 'âœ¨', 'ðŸŽŠ', 'ðŸŽˆ', 'ðŸ’«', 'ðŸŒŸ', 'ðŸŽ‡', 'ðŸŽ†'];
      
      for (let i = 0; i < count; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        
        const confettiType = confettiTypes[Math.floor(Math.random() * confettiTypes.length)];
        confetti.innerHTML = confettiType;

        const startX = Math.random() * window.innerWidth;
        const size = Math.random() * 20 + 15;
        const delay = Math.random() * 20;
        const duration = Math.random() * 10 + 20;
        const colors = ['#FF6B6B', '#4ECDC4', '#FFD700', '#45B7D1', '#9D50BB'];
        const color = colors[Math.floor(Math.random() * colors.length)];

        confetti.style.left = `${startX}px`;
        confetti.style.fontSize = `${size}px`;
        confetti.style.animationDelay = `${delay}s`;
        confetti.style.animationDuration = `${duration}s`;
        confetti.style.color = color;
        confetti.style.opacity = Math.random() * 0.3 + 0.2;

        container.appendChild(confetti);
      }
    }

    // Add some interactive confetti on click
    document.addEventListener('click', (e) => {
      if (Math.random() > 0.5) { // 50% chance on click
        const confetti = document.createElement('div');
        confetti.style.position = 'fixed';
        confetti.style.left = `${e.clientX}px`;
        confetti.style.top = `${e.clientY}px`;
        confetti.style.fontSize = '40px';
        confetti.style.color = '#FFD700';
        confetti.style.opacity = '0.9';
        confetti.style.pointerEvents = 'none';
        confetti.style.zIndex = '1000';
        confetti.style.transition = 'all 1.5s';
        confetti.style.transform = 'scale(0)';
        
        const confettiTypes = ['ðŸŽ‰', 'âœ¨', 'ðŸŽŠ', 'ðŸŽˆ'];
        confetti.innerHTML = confettiTypes[Math.floor(Math.random() * confettiTypes.length)];
        
        document.body.appendChild(confetti);

        setTimeout(() => {
          confetti.style.transform = 'scale(1) translateY(-100px) rotate(360deg)';
          confetti.style.opacity = '0';
        }, 10);

        setTimeout(() => {
          if (confetti.parentNode) confetti.parentNode.removeChild(confetti);
        }, 1600);
      }
    });
  </script>
</body>
</html>
